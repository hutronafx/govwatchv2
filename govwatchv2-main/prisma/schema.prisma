generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ProcurementRecord {
  id          String   @id @default(uuid())
  originalId  String?  @unique // Optional ID from source data
  ministry    String
  vendor      String
  amount      Float
  method      String
  category    String
  date        DateTime // Parsed date of award
  title       String
  sourceUrl   String
  contractUrl String?  // Optional external link
  crawledAt   DateTime @default(now())

  // Indexes for faster lookups
  @@index([ministry])
  @@index([vendor])
  @@index([date])
}
